{
    "root": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "semi": "off",
      "quotes": ["off", "backtick", {"allowTemplateLiterals": true}],
      "space-before-function-paren": "off",
      "no-unused-vars": "warn",
      "comma-dangle": "off",
      "prefer-const": "off",
      "no-console": "off",
      "arrow-body-style": "off",
      "no-use-before-define": ["error", { "variables": false }],
      "camelcase": "off",
      "no-multi-assign": "off",
      "import/order": "warn",
      "no-var": "warn",
      "prefer-destructuring": "off",
      "prefer-template": "off",
      "consistent-return": "off",
      "func-names": "off",
      "vars-on-top": "off",
      "object-curly-spacing": "off",
      "class-methods-use-this": "off",
      "prefer-arrow-callback": "off",
      "no-param-reassign": "warn",
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/prop-types": "off"
    }
}